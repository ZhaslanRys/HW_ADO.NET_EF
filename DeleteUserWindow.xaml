<Window x:Class="HomeWorkEF.DeleteUserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:HomeWorkEF"
        mc:Ignorable="d"
        Title="DeleteUserWindow" Height="300" Width="400">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="80*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="40*"/>
            <RowDefinition Height="80*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="25*"/>
            <ColumnDefinition Width="25*"/>
            <ColumnDefinition Width="25*"/>
        </Grid.ColumnDefinitions>

        <TextBlock Text="Логин для удалния" Grid.Row="1" FontSize="15"/>
        <TextBox Name ="deleteLoginBox" Grid.Column="1" Grid.Row="1"/>
        <Button Name="deleteUserButton" FontSize="15" Content="Удалить" Grid.Column="1" Grid.Row="2" Click="deleteUserButton_Click"/>
    </Grid>
</Window>
